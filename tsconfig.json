{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "h",
    "module": "es6",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "WebWorker",
      "WebWorker.ImportScripts",
      "ES5",
      "ES6",
      "ESNext"
    ],
    "target": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "sourceMap": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*"]
}
